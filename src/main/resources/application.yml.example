# E-commerce Platform API Configuration Example File
# Copy this file to application.yml and modify configurations as needed

# Spring Boot Application Configuration
spring:
  application:
    name: ecommerce-platform
  
  # Data Source Configuration - H2 In-Memory Database (for development)
  # In production, replace with your actual database configuration
  datasource:
    url: jdbc:h2:mem:ecommerce_db;DB_CLOSE_DELAY=-1;DB_CLOSE_ON_EXIT=FALSE
    driverClassName: org.h2.Driver
    username: sa
    password: password
    
  # H2 Console Configuration (Development Environment Only)
  # Disable in production
  h2:
    console:
      enabled: true
      path: /h2-console
      settings:
        web-allow-others: false
  
  # JPA Configuration
  jpa:
    database-platform: org.hibernate.dialect.H2Dialect
    hibernate:
      ddl-auto: create-drop  # Auto-create table structure in development environment
    show-sql: true  # Display SQL statements
    properties:
      hibernate:
        format_sql: true  # Format SQL statements
        use_sql_comments: true  # Display SQL comments
  
  # JSON Serialization Configuration
  jackson:
    serialization:
      indent-output: true  # Format JSON output
    date-format: yyyy-MM-dd HH:mm:ss  # Date format
    time-zone: Asia/Shanghai  # Timezone setting, modify as needed
    default-property-inclusion: non-null  # Ignore null values

# Server Configuration
server:
  port: 8080  # Service port, can be modified as needed

# Logging Configuration
logging:
  level:
    root: INFO  # Root log level
    com.ecommerce: INFO  # Application log level, can be set to DEBUG for debugging
    org.hibernate.SQL: DEBUG  # SQL log level (disable in production)
    org.hibernate.type.descriptor.sql.BasicBinder: TRACE  # Parameter binding log (disable in production)
  pattern:
    console: "%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level [%X{requestId:-}] %logger{36} - %msg%n"  # Console log format with request ID tracking

# Actuator Monitoring Endpoint Configuration
management:
  endpoints:
    web:
      exposure:
        include: health,info,metrics  # Exposed endpoints
      base-path: /actuator  # Monitoring endpoint base path
  endpoint:
    health:
      show-details: when-authorized  # Health check detail display policy

# Application Information Configuration
info:
  app:
    name: E-commerce Platform API
    description: E-commerce Platform API Service with Spring Boot and DDD
    version: 1.0.0
    encoding: UTF-8
    java:
      version: 21

# Business Configuration
ecommerce:
  # Settlement Configuration
  settlement:
    cron: "0 0 2 * * ?"  # Execute settlement daily at 2 AM
    enabled: true
  
  # Currency Configuration
  currency:
    default: CNY
    precision: 2  # Amount precision (decimal places)
    
  # Order Configuration
  order:
    timeout-minutes: 30  # Order timeout (minutes)

# Production Environment Configuration Recommendations:
# 1. Replace H2 with production database (MySQL, PostgreSQL, etc.)
# 2. Disable H2 console (spring.h2.console.enabled: false)
# 3. Set hibernate.ddl-auto to 'validate' or 'none'
# 4. Disable SQL logging (org.hibernate.SQL: WARN)
# 5. Modify server.port to production environment port
# 6. Set logging.level.root to WARN or ERROR
# 7. Limit management.endpoints.web.exposure.include to only include health
# 8. Configure appropriate security policies
# 9. Set timezone to your production environment timezone 